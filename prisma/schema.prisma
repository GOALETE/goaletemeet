generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  firstName     String
  lastName      String
  email         String         @unique
  phone         String
  source        String
  referenceName String?
  createdAt     DateTime       @default(now())
  subscriptions Subscription[]
}

model Subscription {
  id            String   @id @default(uuid())
  userId        String
  planType      String
  startDate     DateTime
  endDate       DateTime
  paymentRef    String?
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orderId       String   @unique
  paymentStatus String
  duration      Int?
  price         Int      @default(0)// Price in rupees (not paise)
  user          User     @relation(fields: [userId], references: [id])
}

model DailyMeetingLink {
  id              String         @id @default(uuid())
  meetingDate     DateTime       @unique
  meetingLink     String
  platform        String         // "zoom" or "google-meet"
  isUsed          Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  meetingSetting  MeetingSetting @relation(fields: [meetingSettingId], references: [id])
  meetingSettingId Int
}

model MeetingSetting {
  id             Int      @id @default(1)
  platform       String   // "zoom" or "google-meet"
  zoomLink       String?
  meetLink       String?
  meetingTitle   String   @default("GOALETE Club Session")
  meetingDesc    String?
  updatedAt      DateTime @updatedAt
  dailyLinks     DailyMeetingLink[]
}

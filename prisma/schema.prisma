generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  firstName     String
  lastName      String
  email         String         @unique
  phone         String
  source        String
  referenceName String?
  createdAt     DateTime       @default(now())
  role          String         @default("user")
  subscriptions Subscription[]
  meetings      Meeting[]      @relation("MeetingUsers")
}

model Subscription {
  id            String   @id @default(uuid())
  userId        String
  planType      String
  startDate     DateTime
  endDate       DateTime
  paymentRef    String?
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  orderId       String   @unique
  paymentStatus String
  duration      Int?
  price         Int      @default(0)
  user          User     @relation(fields: [userId], references: [id])
}

model Meeting {
  id           String   @id @default(uuid())
  meetingDate  DateTime @unique
  platform     String
  meetingLink  String
  startTime    DateTime
  endTime      DateTime
  createdBy    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  isDefault    Boolean  @default(false)
  meetingDesc  String?  @default("Join us for a GOALETE Club session to learn how to achieve any goal in life.")
  meetingTitle String   @default("GOALETE Club Session")
  users        User[]   @relation("MeetingUsers")
}
